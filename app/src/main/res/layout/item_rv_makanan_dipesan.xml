<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewMakananYangDipesan"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewJumlahDanNamaMakanan"
        android:layout_width="226dp"
        android:layout_height="57dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewMakananYangDipesan"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJumlahHarga"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewMakananYangDipesan"
        app:layout_constraintTop_toBottomOf="@+id/textViewJumlahDanNamaMakanan" />
</androidx.constraintlayout.widget.ConstraintLayout>